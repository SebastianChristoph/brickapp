
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Reject Mapping-Request</MudText>
        <MudTextField @bind-Value="_reason" Label="Rejection Reason" Variant="Variant.Outlined" Margin="Margin.Normal" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => MudDialog?.Close(DialogResult.Ok(_reason)))" Color="Color.Error">Reject</MudButton>
        <MudButton Color="Color.Secondary"  OnClick="@(() => MudDialog?.Cancel())">Cancel</MudButton>
    </DialogActions>
</MudDialog>