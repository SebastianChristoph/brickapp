@namespace brickisbrickapp.Components.Dialogs
@using MudBlazor
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Mapping-Request ablehnen</MudText>
        <MudTextField @bind-Value="_reason" Label="Ablehnungsgrund" Variant="Variant.Outlined" Margin="Margin.Normal" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => MudDialog?.Close(DialogResult.Ok(_reason)))" Color="Color.Error">Reject</MudButton>
        <MudButton OnClick="@(() => MudDialog?.Cancel())">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private string _reason = string.Empty;
       [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }
}
