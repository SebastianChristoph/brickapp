@using brickisbrickapp.Helpers
@page "/sets/{itemSetId:int}"

@using Services
@using Data.Entities
@using MudBlazor
@using brickisbrickapp.Components.Pages
@using brickisbrickapp.Components.Dialogs
@inject ItemSetService ItemSetService
@inject UserService UserService
@inject NavigationManager Nav
@inject InventoryService InventoryService
@inject IDialogService DialogService

<PageTitle>Set Details</PageTitle>

@if (_loading)
{
    <MudProgressCircular Indeterminate="true" />
}
else if (_itemSet is null)
{
    <MudText Typo="Typo.h5" Color="Color.Error">
        Set wurde nicht gefunden.
    </MudText>
    <MudButton Variant="Variant.Outlined" OnClick="@GoBack">Zurück</MudButton>
}
else
{
    <MudPaper Class="pa-4 mb-4">
        <MudStack Row="true" Spacing="3" AlignItems="AlignItems.Start">
            @if (!string.IsNullOrEmpty(_itemSet.ImageUrl))
            {
                <div style="flex-shrink:0;">
                    <img src="@_itemSet.ImageUrl" alt="@_itemSet.Name" style="height:200px; width:auto; object-fit:contain; border-radius:4px;" />
                </div>
            }
            <MudStack Spacing="1" Style="flex: 1;">
                <MudText Typo="Typo.h4" GutterBottom="true">
                    @_itemSet.Name
                </MudText>
                <MudText Typo="Typo.subtitle1">
                    Brand: @_itemSet.Brand
                </MudText>
                <MudText Typo="Typo.subtitle2">
                    Set Nr: @_itemSet.LegoSetNum | Jahr: @_itemSet.Year
                </MudText>
                @if (_userItemSet != null)
                {
                    <MudText Typo="Typo.subtitle2">
                        Du besitzt: @_userItemSet.Quantity x
                    </MudText>
                }
                <MudButton Variant="Variant.Filled" 
                           Color="Color.Success" 
                           OnClick="@OpenAddSetDialog"
                           Size="Size.Large"
                           Class="mt-2">
                    <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-2" />
                    Alle Teile hinzufügen
                </MudButton>
            </MudStack>
        </MudStack>
    </MudPaper>

    <MudPaper Class="pa-2 mb-2" Style="background:#f8f8f8;">
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
            <MudProgressLinear Value="@Percent" Color="@(HasAll ? Color.Success : Color.Primary)" Style="min-width:200px;max-width:300px;width:30vw;" />
            <MudText Typo="Typo.body1" Class="ml-4">
                @if (HasAll)
                {
                    <b>Du hast alle Steine, du kannst es bauen!</b>
                }
                else
                {
                    <span>@TotalOwned von @TotalNeeded Steinen im Inventar (@Percent%)</span>
                }
            </MudText>
        </MudStack>
    </MudPaper>

    <MudText Typo="Typo.h6" GutterBottom="true">
        Steine in diesem Set
    </MudText>

    <MudTable Items="_itemSet.Bricks">
    <HeaderContent>
        <MudTh>Bild</MudTh>
        <MudTh>Standard-Name</MudTh>
        <MudTh>Farbe</MudTh>
        <MudTh>Lego</MudTh>
        <MudTh>BlueBrixx</MudTh>
        <MudTh>Cada</MudTh>
        <MudTh>Pantasy</MudTh>
        <MudTh>Mould King</MudTh>
        <MudTh>Anzahl im Set</MudTh>
        <MudTh>Hast du?</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Bild">
            @{
                var partNum = context.MappedBrick.LegoPartNum ?? "";
                var url = _partImageUrls.TryGetValue(partNum, out var u) ? u : null;
                var placeholder = brickisbrickapp.Services.RebrickablePartImageService.PlaceholderUrl;
                var imgUrl = !string.IsNullOrWhiteSpace(url) ? url : placeholder;
                var overlay = BrickColorHelper.GetHexForColor(context.BrickColor?.Name);
            }
            @if (overlay != null)
            {
                <div class="brick" style="--brick-overlay:@overlay">
                    <img src="@imgUrl" alt="" style="max-width:48px;max-height:48px;border-radius:4px;border:1px solid #ccc;" onerror="if(this.src!== '@placeholder'){this.src='@placeholder';this.style.opacity='0.5';}" />
                </div>
            }
            else
            {
                <img src="@imgUrl" alt="" style="max-width:48px;max-height:48px;border-radius:4px;border:1px solid #ccc;" onerror="if(this.src!== '@placeholder'){this.src='@placeholder';this.style.opacity='0.5';}" />
            }
        </MudTd>
        <style>
        .brick {
            position: relative;
            display: inline-block;
            isolation: isolate;
        }
        .brick img {
            display: block;
        }
        .brick::after {
            content: "";
            position: absolute;
            inset: 0;
            background: var(--brick-overlay, transparent);
            mix-blend-mode: multiply;
            pointer-events: none;
            border-radius: 4px;
        }
        </style>
        <MudTd DataLabel="Standard-Name">@context.MappedBrick.Name</MudTd>
        <MudTd DataLabel="Farbe">@context.BrickColor?.Name</MudTd>
        <MudTd DataLabel="Lego">@context.MappedBrick.LegoName @if (!string.IsNullOrEmpty(context.MappedBrick.LegoPartNum)) { <span style="font-size: 0.9em; color: #999;">(@context.MappedBrick.LegoPartNum)</span> }</MudTd>
        <MudTd DataLabel="BlueBrixx">@context.MappedBrick.BbName</MudTd>
        <MudTd DataLabel="Cada">@context.MappedBrick.CadaName</MudTd>
        <MudTd DataLabel="Pantasy">@context.MappedBrick.PantasyName</MudTd>
        <MudTd DataLabel="Mould King">@context.MappedBrick.MouldKingName</MudTd>
        <MudTd DataLabel="Anzahl">@context.Quantity</MudTd>
        <MudTd DataLabel="Hast du?">
            @{
                var key = (context.MappedBrickId, context.BrickColorId);
                if (_ownedByBrand.TryGetValue(key, out var brands) && brands.Count > 0)
                {
                    foreach (var brand in brands)
                    {
                        <MudChip T="string" Color="Color.Primary" Class="mr-1 mb-1">@brand.Key: @brand.Value</MudChip>
                    }
                }
                else
                {
                    <MudChip T="string" Color="Color.Default">Keinen</MudChip>
                }
            }
        </MudTd>
    </RowTemplate>
</MudTable>


    <MudButton Class="mt-4"
               Variant="Variant.Outlined"
               OnClick="@GoBack">
        Zurück
    </MudButton>
}
