                        <MudIconButton Icon="@Icons.Material.Filled.Add" Size="Size.Small" Variant="Variant.Filled"
                                       Color="Color.Success"
                                       OnClick="@(() => OpenAddInventoryDialog(context))">
                        </MudIconButton>
                    </MudTooltip>
                    <MudTooltip Text="Add to Wanted List">
                        <MudIconButton Icon="@Icons.Material.Filled.PlaylistAdd" Size="Size.Small"
                                       Variant="Variant.Filled" Color="Color.Primary"
                                       OnClick="@(() => OpenAddToWantedListDialog(context))">

                        </MudIconButton>
                    </MudTooltip>
                </MudStack>
            </MudTd>
